{
  "manifest_version": 3,
  "name": "Scambino",
  "version": "1.0",
  "description": "個人防詐小助理",
  "permissions": [
    "storage" 
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://10.246.69.236:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scambino 個人助理",
    "default_icon": {
      "16": "images/scambino16.png",
      "48": "images/scambino48.png",
     "128": "images/scambino128.png"
    }
  },
  "icons": {
    "16": "images/scambino16.png",
    "48": "images/scambino48.png",
    "128": "images/scambino128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["images/scambino48.png"],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}